{
    "name": "appstudio",
    "displayName": "AppStudio",
    "description": "AppStudio Extension for Visual Studio Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "selectBinFolder",
                "title": "Select Bin Folder"
            },
            {
                "command": "appRun",
                "title": "appRun"
            },
            {
                "command": "appMake",
                "title": "appMake"
            },
            {
                "command": "appSetting",
                "title": "appSettings"
            },
            {
                "command": "appUpload",
                "title": "appUpload"
            }
        ],

        "keybindings": [
            {
                "command": "appRun",
                "key": "alt+shift+r"
            },
            {
                "command": "appMake",
                "key": "alt+shift+m"
            },
            {
                "command": "appSetting",
                "key": "alt+shift+s"
            },
            {
                "command": "appUpload",
                "key": "alt+shift+up"
            }
        ],

        "configuration": {
            "type": "object",
            "title": "AppStudio",
            "properties": {
                "AppStudio Bin Folder": {
                    "type": ["string"],
                    "default": "",
                    "description" : "Path for the AppStudio bin folder"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.1.4",
        "vscode": "^1.1.25",
        "eslint": "^4.11.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
