{
    "name": "appstudio",
    "displayName": "AppStudio",
    "description": "AppStudio Extension for Visual Studio Code",
	"license": "MIT",
    "version": "0.0.2",
    "publisher": "Esri",
    "repository": {
		"type": "git",
		"url": "https://github.com/ArcGIS/appstudio-vscode"
	},
	"categories": [],
	"engines": {
		"vscode": "^1.30.0"
	},
	"activationEvents": [
		"*"
	],
	"main": "./client/out/extension",
	"contributes": {
		"commands": [
            {
                "command": "manualSelectAppStudioPath",
                "title": "AppStudio: Manual Select AppStudio Installation Path"
            },
            {
                "command": "autoSelectAppStudioPath",
                "title": "AppStudio: Auto Select AppStudio Installation Path"
            },
            {
                "command": "appRun",
                "title": "AppStudio: AppRun"
            },
            {
                "command": "appMake",
                "title": "AppStudio: AppMake"
            },
            {
                "command": "appSetting",
                "title": "AppStudio: AppSettings"
            },
            {
                "command": "appUpload",
                "title": "AppStudio: AppUpload"
            }
        ],
        "keybindings": [
            {
                "command": "appRun",
                "key": "alt+shift+r"
            },
            {
                "command": "appMake",
                "key": "alt+shift+m"
            },
            {
                "command": "appSetting",
                "key": "alt+shift+s"
            },
            {
                "command": "appUpload",
                "key": "alt+shift+up"
            }
        ],
		"configuration": {
			"type": "object",
            "title": "AppStudio",
            "properties": {
                "AppStudio Path": {
                    "type": [
                        "string"
                    ],
                    "default": "",
                    "markdownDescription": "Installation Path of AppStudio. This is used for running the AppStudio applications. Only modify this when you need to change the installation path for AppStudio. It's recommended to modify this by running the `Manual Select AppStudio Installation Path` command in the command palette (Ctrl+Shift+P). If you wish to modify in settings.json directly, please make sure the path is conformed to the following examples of format: Windows: `C:\\\\Users\\\\username\\\\Applications\\\\ArcGIS\\\\AppStudio`, MacOS and Linux: `~/Application/ArcGIS/AppStudio`"
                }
            }
		},
		"languages": [
            {
                "id": "qml",
                "extensions": [
                    ".qml",
                    ".qmlproject"
                ],
                "configuration": "./syntaxes/qml.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "qml",
                "scopeName": "source.qml",
                "path": "./syntaxes/qml.tmLanguage.json"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^8.10.25",
		"tslint": "^5.11.0",
        "typescript": "^3.1.4",
        "vscode": "^1.1.25"
	},
	"dependencies": {
		"read-ini-file": "^2.0.0"
	}
}
