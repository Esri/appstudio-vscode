{
    "name": "appstudio",
    "displayName": "AppStudio",
    "description": "AppStudio Extension for Visual Studio Code",
	"license": "MIT",
    "version": "0.0.1",
    "publisher": "Esri",
    "repository": {
		"type": "git",
		"url": "https://github.com/ArcGIS/appstudio-vscode"
	},
	"categories": [],
	"engines": {
		"vscode": "^1.30.0"
	},
	"activationEvents": [
		"*"
	],
	"main": "./client/out/extension",
	"contributes": {
		"commands": [
            {
                "command": "selectAppStudioPath",
                "title": "Select AppStudio Folder"
            },
            {
                "command": "appRun",
                "title": "appRun"
            },
            {
                "command": "appMake",
                "title": "appMake"
            },
            {
                "command": "appSetting",
                "title": "appSettings"
            },
            {
                "command": "appUpload",
                "title": "appUpload"
            }
        ],
        "keybindings": [
            {
                "command": "appRun",
                "key": "alt+shift+r"
            },
            {
                "command": "appMake",
                "key": "alt+shift+m"
            },
            {
                "command": "appSetting",
                "key": "alt+shift+s"
            },
            {
                "command": "appUpload",
                "key": "alt+shift+up"
            }
        ],
		"configuration": {
			"type": "object",
            "title": "AppStudio",
            "properties": {
                "AppStudio Path": {
                    "type": [
                        "string"
                    ],
                    "default": "",
                    "description": "Path for the AppStudio folder"
                }
            }
		},
		"languages": [
            {
                "id": "qml",
                "extensions": [
                    ".qml",
                    ".qmlproject"
                ],
                "configuration": "./syntaxes/qml.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "qml",
                "scopeName": "source.qml",
                "path": "./syntaxes/qml.tmLanguage.json"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^8.10.25",
		"tslint": "^5.11.0",
        "typescript": "^3.1.4",
        "vscode": "^1.1.25"
	},
	"dependencies": {
		"read-ini-file": "^2.0.0"
	}
}
