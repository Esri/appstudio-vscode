{
    "name": "appstudio-vscode",
    "displayName": "AppStudio for ArcGIS",
    "description": "Build AppStudio for ArcGIS apps in Visual Studio Code",
    "license": "SEE LICENSE IN LICENSE",
    "version": "0.0.9",
    "publisher": "Esri",
    "repository": {
        "type": "git",
        "url": "https://github.com/ArcGIS/appstudio-vscode"
    },
    "icon": "resources/appstudio-logo.png",
    "categories": [],
    "engines": {
        "vscode": "^1.30.0"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "commands": [
            {
                "command": "appstudio.refresh",
                "title": "refresh",
                "icon": {
                    "dark": "resources/dark/refresh-dark.svg",
                    "light": "resources/light/refresh-light.svg"
                },
                "category": "AppStudio"
            },
            {
                "command": "openAppinfo",
                "title": "Open appinfo.json",
                "category": "AppStudio"
            },
            {
                "command": "openMainfile",
                "title": "Open main .qml file",
                "category": "AppStudio"
            },
            {
                "command": "removeProject",
                "title": "Remove Project from Workspace",
                "category": "AppStudio"
            },
            {
                "command": "manualSelectAppStudioPath",
                "title": "Manual Select AppStudio Installation Path",
                "category": "AppStudio"
            },
            {
                "command": "autoSelectAppStudioPath",
                "title": "Auto Select AppStudio Installation Path",
                "category": "AppStudio"
            },
            {
                "command": "appRun",
                "title": "AppRun",
                "icon": {
                    "dark": "resources/dark/app-run-dark.svg",
                    "light": "resources/light/app-run-light.svg"
                },
                "category": "AppStudio"
            },
            {
                "command": "appMake",
                "title": "AppMake",
                "icon": {
                    "dark": "resources/dark/hammer-dark.svg",
                    "light": "resources/light/hammer-light.svg"
                },
                "category": "AppStudio"
            },
            {
                "command": "appSetting",
                "title": "AppSettings",
                "icon": {
                    "dark": "resources/dark/gear-dark.svg",
                    "light": "resources/light/gear-light.svg"
                },
                "category": "AppStudio"
            },
            {
                "command": "appUpload",
                "title": "AppUpload",
                "icon": {
                    "dark": "resources/dark/upload-dark.svg",
                    "light": "resources/light/upload-light.svg"
                },
                "category": "AppStudio"
            },
            {
                "command": "openApiRefLink",
                "title": "Open Api Reference",
                "icon": {
                    "dark": "resources/dark/question-dark.svg",
                    "light": "resources/light/question-light.svg"
                },
                "category": "AppStudio"
            },


            {
                "command": "appRunActive",
                "title": "AppRun",
                "icon": {
                    "dark": "resources/dark/app-run-dark.svg",
                    "light": "resources/light/app-run-light.svg"
                },
                "category": "AppStudio"
            },
            {
                "command": "appMakeActive",
                "title": "AppMake",
                "icon": {
                    "dark": "resources/dark/hammer-dark.svg",
                    "light": "resources/light/hammer-light.svg"
                },
                "category": "AppStudio"
            },
            {
                "command": "appSettingActive",
                "title": "AppSettings",
                "icon": {
                    "dark": "resources/dark/gear-dark.svg",
                    "light": "resources/light/gear-light.svg"
                },
                "category": "AppStudio"
            },
            {
                "command": "appUploadActive",
                "title": "AppUpload",
                "icon": {
                    "dark": "resources/dark/upload-dark.svg",
                    "light": "resources/light/upload-light.svg"
                },
                "category": "AppStudio"
            }
        ],
        "keybindings": [
            {
                "command": "appRunActive",
                "key": "alt+shift+r"
            },
            {
                "command": "appMakeActive",
                "key": "alt+shift+m"
            },
            {
                "command": "appSettingActive",
                "key": "alt+shift+s"
            },
            {
                "command": "appUploadActive",
                "key": "alt+shift+up"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "AppStudio for ArcGIS",
            "properties": {
                "Installation path": {
                    "type": [
                        "string"
                    ],
                    "default": "",
                    "markdownDescription": "Installation path of AppStudio for ArcGIS. This is used for running AppStudio for ArcGIS tools. Only modify this when you need to change the installation path for AppStudio for ArcGIS. It's recommended to modify this by running the `Manual Select AppStudio Installation Path` command in the command palette (Ctrl+Shift+P). If you wish to modify in settings.json directly, follow these examples of format: Windows: `C:\\\\Users\\\\username\\\\Applications\\\\ArcGIS\\\\AppStudio`, MacOS and Linux: `~/Application/ArcGIS/AppStudio`"
                },
                "Change active project": {
                    "type": "boolean",
                    "default": false,
                    "description": "Change the active project when a QML file is saved"
                },
                "Remember option for changing active project": {
                    "type": "boolean",
                    "default": false,
                    "description": "Remember the option for changing active project when a QML file is saved"
                }
            }
        },
        "languages": [
            {
                "id": "qml",
                "extensions": [
                    ".qml",
                    ".qmlproject",
                    ".qmltypes"
                ],
                "configuration": "./syntaxes/qml.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "qml",
                "scopeName": "source.qml",
                "path": "./syntaxes/qml.tmLanguage.json"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "appstudioProjects",
                    "name": "AppStudio Projects"
                }
            ]
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "appRun",
                    "when": "false"
                },
                {
                    "command": "appMake",
                    "when": "false"
                },
                {
                    "command": "appSetting",
                    "when": "false"
                },
                {
                    "command": "appUpload",
                    "when": "false"
                },
                {
                    "command": "openAppinfo",
                    "when": "false"
                },
                {
                    "command": "openMainfile",
                    "when": "false"
                },
                {
                    "command": "removeProject",
                    "when": "false"
                }
            ],
            "view/title": [
                {
                    "command": "appstudio.refresh",
                    "when": "view == appstudioProjects",
                    "group": "navigation"
                },
                {
                    "command": "openApiRefLink",
                    "when": "view == appstudioProjects",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "appRun",
                    "when": "viewItem == appStudioProject",
                    "group": "inline@4"
                },
                {
                    "command": "appMake",
                    "when": "viewItem == appStudioProject",
                    "group": "inline@3"
                },
                {
                    "command": "appSetting",
                    "when": "viewItem == appStudioProject",
                    "group": "inline@1"
                },
                {
                    "command": "appUpload",
                    "when": "viewItem == appStudioProject",
                    "group": "inline@2"
                },
                {
                    "command": "openAppinfo",
                    "when": "viewItem == appStudioProject",
                    "group": "groupA@2"
                },
                {
                    "command": "openMainfile",
                    "when": "viewItem == appStudioProject",
                    "group": "groupA@1"
                },
                {
                    "command": "appRun",
                    "when": "viewItem == appStudioProject",
                    "group": "groupB@1"
                },
                {
                    "command": "appMake",
                    "when": "viewItem == appStudioProject",
                    "group": "groupB@2"
                },
                {
                    "command": "appUpload",
                    "when": "viewItem == appStudioProject",
                    "group": "groupB@3"
                },
                {
                    "command": "appSetting",
                    "when": "viewItem == appStudioProject",
                    "group": "groupB@4"
                },


                {
                    "command": "appRun",
                    "when": "viewItem == appStudioProjectworkspace",
                    "group": "inline@4"
                },
                {
                    "command": "appMake",
                    "when": "viewItem == appStudioProjectworkspace",
                    "group": "inline@3"
                },
                {
                    "command": "appSetting",
                    "when": "viewItem == appStudioProjectworkspace",
                    "group": "inline@1"
                },
                {
                    "command": "appUpload",
                    "when": "viewItem == appStudioProjectworkspace",
                    "group": "inline@2"
                },
                {
                    "command": "openAppinfo",
                    "when": "viewItem == appStudioProjectworkspace",
                    "group": "groupA@2"
                },
                {
                    "command": "openMainfile",
                    "when": "viewItem == appStudioProjectworkspace",
                    "group": "groupA@1"
                },
                {
                    "command": "removeProject",
                    "when": "viewItem == appStudioProjectworkspace",
                    "group": "groupA@3"
                },
                {
                    "command": "appRun",
                    "when": "viewItem == appStudioProjectworkspace",
                    "group": "groupB@1"
                },
                {
                    "command": "appMake",
                    "when": "viewItem == appStudioProjectworkspace",
                    "group": "groupB@2"
                },
                {
                    "command": "appUpload",
                    "when": "viewItem == appStudioProjectworkspace",
                    "group": "groupB@3"
                },
                {
                    "command": "appSetting",
                    "when": "viewItem == appStudioProjectworkspace",
                    "group": "groupB@4"
                },



                {
                    "command": "appRun",
                    "when": "viewItem == appStudioProjectActive",
                    "group": "inline@4"
                },
                {
                    "command": "appMake",
                    "when": "viewItem == appStudioProjectActive",
                    "group": "inline@3"
                },
                {
                    "command": "appSetting",
                    "when": "viewItem == appStudioProjectActive",
                    "group": "inline@1"
                },
                {
                    "command": "appUpload",
                    "when": "viewItem == appStudioProjectActive",
                    "group": "inline@2"
                },
                {
                    "command": "openAppinfo",
                    "when": "viewItem == appStudioProjectActive",
                    "group": "groupA@2"
                },
                {
                    "command": "openMainfile",
                    "when": "viewItem == appStudioProjectActive",
                    "group": "groupA@1"
                },
                {
                    "command": "appRunActive",
                    "when": "viewItem == appStudioProjectActive",
                    "group": "groupB@1"
                },
                {
                    "command": "appMakeActive",
                    "when": "viewItem == appStudioProjectActive",
                    "group": "groupB@2"
                },
                {
                    "command": "appUploadActive",
                    "when": "viewItem == appStudioProjectActive",
                    "group": "groupB@3"
                },
                {
                    "command": "appSettingActive",
                    "when": "viewItem == appStudioProjectActive",
                    "group": "groupB@4"
                },



                {
                    "command": "appRun",
                    "when": "viewItem == appStudioProjectActiveworkspace",
                    "group": "inline@4"
                },
                {
                    "command": "appMake",
                    "when": "viewItem == appStudioProjectActiveworkspace",
                    "group": "inline@3"
                },
                {
                    "command": "appSetting",
                    "when": "viewItem == appStudioProjectActiveworkspace",
                    "group": "inline@1"
                },
                {
                    "command": "appUpload",
                    "when": "viewItem == appStudioProjectActiveworkspace",
                    "group": "inline@2"
                },
                {
                    "command": "openAppinfo",
                    "when": "viewItem == appStudioProjectActiveworkspace",
                    "group": "groupA@2"
                },
                {
                    "command": "openMainfile",
                    "when": "viewItem == appStudioProjectActiveworkspace",
                    "group": "groupA@1"
                },
                {
                    "command": "removeProject",
                    "when": "viewItem == appStudioProjectActiveworkspace",
                    "group": "groupA@3"
                },
                {
                    "command": "appRunActive",
                    "when": "viewItem == appStudioProjectActiveworkspace",
                    "group": "groupB@1"
                },
                {
                    "command": "appMakeActive",
                    "when": "viewItem == appStudioProjectActiveworkspace",
                    "group": "groupB@2"
                },
                {
                    "command": "appUploadActive",
                    "when": "viewItem == appStudioProjectActiveworkspace",
                    "group": "groupB@3"
                },
                {
                    "command": "appSettingActive",
                    "when": "viewItem == appStudioProjectActiveworkspace",
                    "group": "groupB@4"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.9.3",
        "tslint": "^5.12.1",
        "typescript": "^3.3.3"
    },
    "dependencies": {
        "read-ini-file": "^2.0.0"
    }
}
